{
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strict": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": false,
        "jsx": "react",
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "~*": ["src/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}